# Docker Environment Configuration
# Copy this to .env in the root directory for docker-compose

# Database Configuration
DB_USER=coreq_user
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_NAME=coreq_loans

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_YOUR_GENERATED_SECRET

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# SMS Configuration (Africa's Talking)
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=YOUR_API_KEY_HERE
AFRICASTALKING_SENDER_ID=COREQ

# SMS Configuration (Twilio - Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Business Rules
GRACE_PERIOD_DAYS=7
DAILY_PENALTY_RATE=3

# Application Settings
NODE_ENV=production
RUN_NOTIFICATIONS_ON_STARTUP=false
COMPANY_NAME=Core Q Capital
ADMIN_EMAIL=admin@coreqcapital.com
