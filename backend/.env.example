# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=your_database_user
DB_PASSWORD=your_strong_database_password
DB_NAME=coreq_loans
DB_PORT=3306

# JWT Configuration
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_min_32_characters

# Email Configuration (for automated due date reminders & loan agreements)
# Using Gmail requires "App Password" - see: https://support.google.com/accounts/answer/185833
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# SMS Configuration
# OPTION 1: Africa's Talking (Recommended for Kenya - https://africastalking.com)
# After signup, get your API key from dashboard
AFRICASTALKING_USERNAME=sandbox  # Use your username after going live
AFRICASTALKING_API_KEY=YOUR_AFRICASTALKING_API_KEY_HERE
AFRICASTALKING_SENDER_ID=COREQ    # Your sender ID (max 11 chars)

# OPTION 2: Twilio (Alternative - https://www.twilio.com)
# IMPORTANT: Without these, SMS will be simulated in console logs
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Loan Business Rules (from instructions - do not change)
GRACE_PERIOD_DAYS=7
DAILY_PENALTY_RATE=3

# Notification Testing (set to true to run notifications immediately on server startup)
RUN_NOTIFICATIONS_ON_STARTUP=false

# Company Information
COMPANY_NAME=Core Q Capital
ADMIN_EMAIL=admin@coreqcapital.com

# Access Database Path (for migration - if needed)
# Leave empty if not using Access database migration
ACCESS_DB_PATH=